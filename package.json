{
    "name": "stash-police",
    "version": "1.0.0",
    "description": "Stash Police - Path Of Exile stash assistant app",
    "main": "build/backend.js",
    "author": {
        "name": "Daniil Demidovich",
        "email": "daniil.demidovich@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/O4epegb/stash-police"
    },
    "scripts": {
        "precommit": "lint-staged",
        "dev": "cross-env ELECTRON_CONNECT=true webpack --watch",
        "build": "cross-env NODE_ENV=production webpack",
        "build:dev": "webpack",
        "lint": "tslint --fix \"./src/**/*.ts{,x}\"",
        "prettier": "prettier --parser typescript --single-quote --tab-width 4 --write \"./src/**/*.ts{,x}\"",
        "release": "electron-builder"
    },
    "build": {
        "appId": "com.electron.stach-police",
        "productName": "Stash Police",
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "icon": "./src/frontend/assets/police-icon.png",
        "publish": {
            "provider": "github"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "browserslist": [
        "last 2 Chrome versions"
    ],
    "lint-staged": {
        "*.ts{,x}": [
            "tslint",
            "prettier --parser typescript --single-quote --tab-width 4 --write",
            "git add"
        ]
    },
    "dependencies": {
        "axios": "^0.18.0",
        "cheerio": "^1.0.0-rc.2",
        "classnames": "^2.2.6",
        "date-fns": "^1.29.0",
        "electron-updater": "^2.21.10",
        "fs-extra": "^6.0.1",
        "lodash": "^4.17.10",
        "mobx": "^5.0.3",
        "mobx-react": "^5.2.3",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-pose": "^2.1.2",
        "react-router-dom": "^4.3.1",
        "react-table": "^6.8.6",
        "tslib": "^1.9.2",
        "uuid": "^3.2.1"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.7",
        "@types/classnames": "^2.2.4",
        "@types/fs-extra": "^5.0.3",
        "@types/lodash": "4.14.110",
        "@types/node": "^10.3.4",
        "@types/react": "^16.4.0",
        "@types/react-dom": "^16.0.6",
        "@types/react-router-dom": "^4.2.7",
        "@types/react-table": "^6.7.11",
        "@types/uuid": "^3.4.3",
        "copy-webpack-plugin": "^4.5.1",
        "cross-env": "^5.2.0",
        "css-loader": "^0.28.11",
        "electron": "^2.0.2",
        "electron-builder": "^20.15.1",
        "electron-connect": "^0.6.3",
        "electron-reload-webpack-plugin": "^2.0.1",
        "file-loader": "^1.1.11",
        "fork-ts-checker-webpack-plugin": "^0.4.2",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^0.14.3",
        "lint-staged": "^7.2.0",
        "node-loader": "^0.6.0",
        "postcss-hexrgba": "^1.0.1",
        "postcss-loader": "^2.1.5",
        "precss": "^3.1.2",
        "prettier": "^1.13.5",
        "style-loader": "^0.21.0",
        "ts-loader": "^4.4.1",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "url-loader": "^1.0.1",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.8"
    }
}
